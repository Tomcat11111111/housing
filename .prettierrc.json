{
  "plugins": [
    "@trivago/prettier-plugin-sort-imports"
  ],
  "trailingComma": "es5",
  "tabWidth": 2,
  "singleQuote": true,
  "importOrder": [
    "^(^react$|@react|react)",
    "<THIRD_PARTY_MODULES>",
    "^@/common/(.*)$",
    "^@/layout/(.*)$",
    "^@/components/(.*)$",
    "^@/store/(.*)$",
    "^@/utils/(.*)$",
    "^@/icon/(.*)$",
    "^~/(.*)$",
    "^[./.{js, jsx, ts, tsx}]",
    "^[./.{scss}]"
  ],
  "importOrderSeparation": true,
  "importOrderSortSpecifiers": true
}